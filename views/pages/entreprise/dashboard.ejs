<!-- ============================ Page Title Start ================================== -->
<section class="call-to-act" style="background:#0b85ec url(/img/landing-bg.png) no-repeat">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-12 col-md-12 text-center">
        <h2 class="text-light">Tableau de Bord Entreprise</h2>
        <span class="ipn-subtitle text-light">
          Bienvenue, <span style="color:#0c0101; font-weight:600;"><%= entreprise.name %></span>
        </span>
      </div>
    </div>
  </div>
</section>
<!-- ============================ Page Title End ================================== -->

<!-- ============================ Dashboard Content ================================== -->
<section class="gray-bg py-5">
  <div class="container">

    <!-- ====== Résumé Statistique ====== -->
    <div class="row g-4">
      <div class="col-lg-3 col-md-6">
        <div class="card shadow-sm border-0 p-4 text-center" style="border-left:5px solid #0b85ec;">
          <h5>Total Formations</h5>
          <h2 class="theme-cl"><%= stats.totalFormations || 0 %></h2>
          <p class="text-muted mb-0">Toutes vos formations créées</p>
        </div>
      </div>

      <div class="col-lg-3 col-md-6">
        <div class="card shadow-sm border-0 p-4 text-center" style="border-left:5px solid #ffc107;">
          <h5>En attente</h5>
          <h2 class="text-warning"><%= stats.pendingFormations || 0 %></h2>
          <p class="text-muted mb-0">En cours de validation</p>
        </div>
      </div>

      <div class="col-lg-3 col-md-6">
        <div class="card shadow-sm border-0 p-4 text-center" style="border-left:5px solid #28a745;">
          <h5>Validées</h5>
          <h2 class="text-success"><%= stats.validatedFormations || 0 %></h2>
          <p class="text-muted mb-0">Formations actives</p>
        </div>
      </div>

      <div class="col-lg-3 col-md-6">
        <div class="card shadow-sm border-0 p-4 text-center" style="border-left:5px solid #dc3545;">
          <h5>Refusées</h5>
          <h2 class="text-danger"><%= stats.refusedFormations || 0 %></h2>
          <p class="text-muted mb-0">Formations non approuvées</p>
        </div>
      </div>
    </div>

    <!-- ====== Dernières Formations ====== -->
    <div class="row mt-5">
      <div class="col-lg-12">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fa fa-book text-primary me-2"></i>Vos dernières formations</h5>
            <a href="/formations/add" class="btn btn-dark btn-sm"><i class="fa fa-plus me-1"></i> Nouvelle formation</a>
          </div>
          <div class="card-body">
            <% if (formations.length === 0) { %>
              <p class="text-muted text-center mb-0">Aucune formation créée pour le moment.</p>
            <% } else { %>
              <table class="table table-hover align-middle">
                <thead class="table-light">
                  <tr>
                    <th>Titre</th>
                    <th>Durée</th>
                    <th>Prix</th>
                    <th>Statut</th>
                    <th>Date</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% formations.forEach(f => { %>
                    <tr>
                      <td><%= f.title %></td>
                      <td><%= f.duration %> h</td>
                      <td><%= f.price %> TND</td>
                      <td>
                        <% if (f.status === 'Validée') { %>
                          <span class="badge bg-success">Validée</span>
                        <% } else if (f.status === 'Refusée') { %>
                          <span class="badge bg-danger">Refusée</span>
                        <% } else { %>
                          <span class="badge bg-warning text-dark">En attente</span>
                        <% } %>
                      </td>
                      <td><%= f.createdAt.toLocaleDateString('fr-FR') %></td>
                      <td>
                        <a href="/formations/all/<%= f._id %>" class="btn btn-info btn-sm"><i class="fa fa-eye"></i></a>
                        <a href="/formations/edit/<%= f._id %>" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i></a>
                        <button class="btn btn-danger btn-sm" onclick="supprimerFormation('<%= f._id %>')"><i class="fa fa-trash"></i></button>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            <% } %>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>
<!-- ============================ Dashboard End ================================== -->

<style>
  .card { border-radius: 12px; }
  .card:hover { transform: translateY(-3px); transition: all 0.2s ease-in-out; }
  .badge { padding: 6px 10px; font-size: 0.85rem; border-radius: 8px; }
</style>

<script>
  function supprimerFormation(id) {
    if (confirm("Voulez-vous vraiment supprimer cette formation ?")) {
      fetch(`/formations/${id}`, { method: 'DELETE' })
        .then(res => { if (res.ok) location.reload(); });
    }
  }
</script>
