<!-- Page Title -->
<section class="call-to-act" style="background:#0b85ec url(/img/landing-bg.png) no-repeat">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 col-md-8">
                <h2 class="text-light">Ajouter une Formation</h2>
                <span class="ipn-subtitle">Remplissez les informations de la formation</span>
            </div>
        </div>
    </div>
</section>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="modal-dialog modal-dialog-centered login-pop-form" role="document">
                <div class="modal-content" id="registermodal">
                    <div class="modal-header">
                        <h4>Nouvelle Formation</h4>
                    </div>

                    <div class="modal-body">
                        <!-- <form action="/formations/add" method="POST" enctype="multipart/form-data"> -->
                        <form action="/formations/add" method="POST" enctype="multipart/form-data">

                            <!-- Entreprise (auto rempli) -->
                            <input type="hidden" name="entreprise" value="<%= entrepriseId %>">
                            <div class="form-group">
                                <label>Entreprise</label>
                                <input type="text" class="form-control" value="<%= entrepriseName %>" disabled>
                            </div>

                            <div class="form-group">
                                <label>Titre</label>
                                <input type="text" name="title" class="form-control" required>
                            </div>

                            <div class="form-group">
                                <label>Description</label>
                                <textarea name="description" class="form-control" rows="4" required></textarea>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Date de début</label>
                                    <input type="date" name="dateDebut" class="form-control" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Date de fin</label>
                                    <input type="date" name="dateFin" class="form-control" required>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label>Nombre de places</label>
                                    <input type="number" name="nbPlaces" class="form-control" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Durée (heures)</label>
                                    <input type="number" name="duration" class="form-control" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Prix (TND)</label>
                                    <input type="number" name="price" class="form-control" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Planning (optionnel)</label>
                                <textarea name="planning" class="form-control" rows="2"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Image</label>
                                <input type="file" name="image" class="form-control" accept="image/*">
                            </div>

                            <button type="submit" class="btn dark-2 btn-md full-width pop-login">Ajouter la formation</button>
                        </form>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
