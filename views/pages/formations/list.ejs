<!-- ============================ Page Title Start ================================== -->
<section class="call-to-act" style="background:#0b85ec url(/img/landing-bg.png) no-repeat">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 col-md-8">
                <h2 class="text-light">Formations Validées</h2>
                <span class="ipn-subtitle">Parcourez les formations validées de votre entreprise</span>
            </div>

            <div class="col-lg-4 col-md-4">
                <!-- Input de recherche -->
                <div class="inner-flexible-box subscribe-box">
                    <div class="input-group">
                        <input type="text" class="form-control large" placeholder="Recherchez une formation...">
                        <button class="btn btn-subscribe bg-dark" type="button">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
                <!-- Fin Input de recherche -->
            </div>
        </div>
    </div>
</section>
<!-- ============================ Page Title End ================================== -->

<!-- ============================ Main Section Start ================================== -->
<section class="gray-bg">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-md-12 col-sm-12">
                <!-- Nombre d'éléments trouvés -->
                <div class="_filt_tag786 d-flex justify-content-between align-items-center">
                    <div class="_tag782">
                        <div class="_tag780">
                            <%= formations.length %> Formations trouvées
                        </div>
                    </div>
                </div>
            </div>

            <% formations.forEach(function(f) { %>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="ser_110 shadow_0">
                        <div class="ser_110_thumb position-relative">
                            <!-- Dropdown Actions -->
                            <div class="dropdown position-absolute top-0 end-0 m-2">
                                <button class="btn btn-sm btn-light dropdown-toggle" type="button" id="dropdownMenu<%= f._id %>" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-cog"></i>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenu<%= f._id %>">
                                    <li><a class="dropdown-item" href="/formations/<%= f._id %>"><i class="fa fa-info-circle mr-2"></i> Détails</a></li>
                                    <li><a class="dropdown-item" href="/entreprise/edit-formation/<%= f._id %>"><i class="fa fa-edit mr-2"></i> Modifier</a></li>
                                    <li><a class="dropdown-item" href="/entreprise/inscriptions/<%= f._id %>"><i class="fa fa-users mr-2"></i> Liste des inscrits</a></li>
                                    <li><a class="dropdown-item" href="/entreprise/demandes-inscription/<%= f._id %>"><i class="fa fa-users mr-2"></i> Demandes d'inscriptions</a></li>
                                    <li><a class="dropdown-item text-danger" style="cursor:pointer;" onclick="supprimerFormation('<%= f._id %>')"><i class="fa fa-trash mr-2"></i> Supprimer</a></li>
                                </ul>
                            </div>

                            <a class="ser_100_link">
                                <img src="/img/co-4.jpg" class="img-fluid" alt="">
                            </a>
                        </div>


                        <div class="ser_110_caption">
                            <div class="ser_title098">
                                <h4 class="_ser_title"><a>
                                        <%= f.title %>
                                    </a></h4>
                                <p>
                                    <%= f.description %>
                                </p>

                                <!-- Formateur -->
                                <% if(f.formateur) { %>
                                    <div class="_110_foot_left">
                                        <div class="_autho098">
                                            <img src="/<%= f.formateur.photo %>" class="img-fluid circle" alt="">
                                        </div>
                                        <div class="_autho097">
                                            <h5><a>
                                                    <%= f.formateur.nom + " " + f.formateur.prenom %>
                                                </a></h5>
                                        </div>
                                    </div>
                                    <% } %>

                                        <!-- Nbre places et Durée -->
                                        <div class="ser_110_footer_center">
                                            <div class="_oi0po">
                                                <p><i class="fa fa-users"></i>
                                                    <%= f.nbPlaces %> Places
                                                </p>
                                            </div>
                                            <div class="_oi0po">
                                                <p><i class="fa fa-clock"></i>
                                                    <%= f.duration %> heures
                                                </p>
                                            </div>
                                        </div>
                            </div>
                        </div>

                        <div class="ser_110_footer">
                            <div class="_110_foot_left">
                                <div class="_oi0po">
                                    <i class="fa fa-calendar-alt"></i>
                                    <%= f.dateDebut.toLocaleDateString('fr-FR') %> - <%=
                                            f.dateFin.toLocaleDateString('fr-FR') %>
                                </div>
                            </div>
                            <div class="_110_foot_right">
                                <div class="_oi0po">
                                    <strong class="theme-cl">
                                        <%= f.price %> TN
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>


        </div>
    </div>
</section>
<!-- ============================ Main Section End ================================== -->